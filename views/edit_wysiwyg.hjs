        })();

        $("#save_button").click(function () {
            var info = {
                title: $("#page_title").val(),
                article: $("#textAreaArticle").val()
            };
            wikinextHelper.saveArticle(page._id, info).next(function (d) {
                var m;
                if (d.status == 'ok') {
                    m = ich.messageSuccess({"message": "Page has been saved"});

